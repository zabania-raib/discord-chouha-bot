# .env.example
# Variables for this file are used for local development with `netlify dev`
# and for the bot script. When deploying, you will set these in the
# Netlify and Railway UI respectively.

# --- Netlify Environment Variables ---
# Set these in your Netlify site dashboard: Site settings > Build & deploy > Environment
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
# The OAUTH_REDIRECT_URI should be your live Netlify function URL
OAUTH_REDIRECT_URI=https://your-site-name.netlify.app/.netlify/functions/auth-callback
BASE_URL=https://your-site-name.netlify.app
# A long, random string for signing cookies
COOKIE_SECRET=
# Optional: A secret token to protect the get-user function
ADMIN_TOKEN=


# --- Railway Environment Variables ---
# Set these in your Railway service dashboard: Variables
DISCORD_BOT_TOKEN=
GUILD_ID=
WELCOME_CHANNEL_ID=
# The BASE_URL is also needed by the bot to construct links
# BASE_URL=https://your-site-name.netlify.app
